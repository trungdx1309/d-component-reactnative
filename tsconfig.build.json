{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-native",
    "skipLibCheck": true,
    // "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // "noEmit": true,
    // "checkJs": true,
    // "allowJs": false,
    "emitDeclarationOnly": true,
    // "noImplicitAny": false,
    "declaration": true,
    // "composite": true,
    // "declarationDir": "./generatedTypes",
    "baseUrl": ".",
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "src/__test__/*"
  ]
}
